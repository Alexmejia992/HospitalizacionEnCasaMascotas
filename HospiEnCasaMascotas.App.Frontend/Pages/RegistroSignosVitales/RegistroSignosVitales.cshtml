@page
@model HospiEnCasaMascostas.App.Fontend.RegistroSignosVitalesModel
@{
    ViewData["Title"] = "Signos Vitales";
}
<style type="text/css">
body{
    background-image: url(/images/registry.jpg);
}
.form-img{
    background-image: url(/images/form-back.png);
    height: 7rem ;
    background-size: cover;
    background-position: center center;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    position: relative;
}
.form-img::before{
    position: absolute;
    content: '';
    
    background-color: white;
    height: 5rem;
    width: 60%;
    top: 80%;
    left: 50%;
    transform: translate(-50%, -10%);
    border-top-left-radius: 70%;
    border-top-right-radius: 70%;
    border-bottom-left-radius: 50%;
    border-bottom-right-radius: 50%;
}
.form-styled{
    border-radius: 10px;
    max-width: 40vw;
    max-height: 80vh;
    background-color: white;
}
.form-center{
    padding: 3%;
}

#contenedor-R-form{
    background-color: #fff;
    max-width: 740px;
    margin: 10px auto 0;
    padding: 0;
    color: "#006699";
    box-shadow: 6px 6px 6px rgba(0,0,0,0.2);
    border-radius: 10px;
    margin-bottom: 5rem;
}

#Contenedor-R-form h2{
    margin: 100px;
    font-size: 22px;
    color:"#006699";
}

#contenedor-R-form .form-group{
	margin-bottom: 20px;
    margin-left:20px;
    margin: 20px;
	width: 100%;
    float:left;
    text-align: left;
}

#Contenedor-R-form .btn{
    width: 56%;
    margin: 20px auto 0;
    display: block;
    outline: none;
}

</style>

<div class="container" id="contenedor-R-form">
 <div class="form-img"></div>

<form class="form-center mt-5 d-flex flex-column justify-content-center">
 <h2>Signos Vitales de la Mascota</h2>
<div class="row">

    <div class="form-group col">
        <label for="inputFecha">Fecha</label>        
        <!--<input type="text" class="form-control" placeholder="Selecciona la Fecha">-->
        <input type=”datetime” class="form-control" id=”fecha” name=”fecha” required=”required” placeholder="Selecciona la Fecha">
    </div>   

     <div class="form-group col">
         <label for="inputHora">Hora </label>
         <input type="text" class="form-control" placeholder="Selecciona la Hora">            
    </div>

</div>

<div class="row">

    <div class="form-group col">
        <label for="SelectSignoVital">Tipo de Signo Vital</label>
        <select class="form-control" id="SelecSignoVital">
        <option disabled selected>Selecciona el Tipo de Signo Vital</option>
        <option>Temperatura</option>
        <option>Frecuencia Cardiaca</option>
        <option>Frecuencia Respiratoria</option>  
        </select>
    </div>

    <div class="form-group col">
       
        <label for="inputValor">Valor </label>
        <input type="text" class="form-control" placeholder="Ingresa el Valor">
    
    </div>

</div>

    <div class="d-flex justify-content-center">
        <button class="btn btn-lg btn-secondary" type="button">Continuar</button>
    </div>

</form>

</div>