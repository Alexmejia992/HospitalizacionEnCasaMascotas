@foreach (var p in @Model.PropietarioDesignados)
{
    foreach (var m in @Model.Mascotas)
    {
        if (p.Id == 1 & m.Id == 1)
        {
            <div class="container box-shadow" id="contenedor-R-form-der">
                <div class="form-center mt-5 d-flex flex-column justify-content-center align-self-center">
                    <div class="row">
                        <div class="form-group col">
                            <div class="d-flex justify-content-center">
                                <a class="btn btn-lg btn-secondary" asp-page="Actualizar" asp-route-id="@p.Id"
                        type="button">Actualizar Datos</a>
                            </div>
                        </div>
                        <div class="form-group col">
                            <div class="d-flex justify-content-center">
                                <a class="btn btn-lg btn-secondary" asp-page="" type="button">Consultar Historia Clinica</a>
                            </div>
                        </div>
                    </div>
                    <div class="row"></div>
                    <div class="form-group col">
                        <div class="d-flex justify-content-center">
                            <a class="btn btn-lg btn-secondary" asp-page="Eliminar" asp-route-id="@p.Id" type="button">Eliminar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

}

