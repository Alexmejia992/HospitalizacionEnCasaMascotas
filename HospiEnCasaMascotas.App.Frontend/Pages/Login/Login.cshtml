@page
@model HospiEnCasaMascotas.App.Frontend.Pages.LoginModel
@{
     ViewData["Title"] = "Login";

}
<style type="text/css">

.form-img{
    background-image: url(/images/form-back.jpg);
    height: 7rem ;
    background-size: cover;
    background-position: center center;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    position: relative;
    
}
.form-img::before{
    position: absolute;
    content: '';
    
    background-color: white;
    height: 5rem;
    width: 60%;
    top: 80%;
    left: 50%;
    transform: translate(-50%, -10%);
    border-top-left-radius: 70%;
    border-top-right-radius: 70%;
    border-bottom-left-radius: 50%;
    border-bottom-right-radius: 50%;
}
.form-styled{
    border-radius: 10px;
    max-width: 40vw;
    max-height: 80vh;

    background-color: white;
}
.form-center{
    padding: 3%;
}
.link{
    color: white;
}
.link:hover {
    color: #212529;
    text-decoration: none;
}
</style>
<div class="form-styled filter">
        <div class="form-img"></div>
        <form class="form-center mt-5 d-flex flex-column justify-content-center"
            
            method="post" 
            enctype="text/plain">
            <h3 class="card-title text-center mb-4 fw-light fs-5">Login</h3>
              
            <div class="form-group">            
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Ingresa tu Correo">
            </div>

            <div class="form-group">           
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Ingresa tu Contraseña">            
            </div>  

            <div class="d-flex justify-content-center">
                <button class="btn btn-login" type="button">INGRESAR</button>
            </div>
            <small id="IngresoHelp" class="form-text text-muted">O sino eres Usuario Registrado</small>
            <div class="d-flex justify-content-center">
                <a class="btn btn-login link" asp-page="/Registro/Registro">REGISTRO</a>
            </div>
        </form>
    </div>  




